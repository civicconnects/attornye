---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Button from '../components/common/Button.astro';
import { getEntry, render } from 'astro:content';

const entry = await getEntry('attorney', 'profile');
if (!entry) {
  throw new Error('Attorney profile not found');
}

const { Content } = await render(entry);
const { name, title, credentials, admissions } = entry.data;

const pageTitle = `${name} - ${title} | Louisville Criminal Defense`;
---

<MainLayout title={pageTitle}>
  <Header slot="header" />

  <section class="py-20 bg-bg-surface">
    <div class="container grid lg:grid-cols-12 gap-12">
      <!-- Sidebar / Credentials -->
      <aside class="lg:col-span-4 space-y-8">
        <div class="bg-white p-8 rounded-sm shadow-sm border-t-4 border-primary">
            <div class="w-48 h-48 bg-navy-900 rounded-full mb-6 mx-auto overflow-hidden border-4 border-accent shadow-lg">
                <img src="/images/ebert-haegele.jpg" alt="Ebert Haegele" class="w-full h-full object-cover" />
            </div>
            <h1 class="text-2xl font-serif font-bold text-center mb-2">{name}</h1>
            <p class="text-center text-sm font-bold text-secondary uppercase tracking-wider mb-6">{title}</p>
            
            <div class="space-y-6">
                <div>
                    <h3 class="font-bold text-sm uppercase mb-2">Education & Credentials</h3>
                    <ul class="text-sm list-disc pl-4 space-y-1 text-gray-600">
                        {credentials.map(c => <li>{c}</li>)}
                    </ul>
                </div>

                <div>
                    <h3 class="font-bold text-sm uppercase mb-2">Bar Admissions</h3>
                    <ul class="text-sm list-disc pl-4 space-y-1 text-gray-600">
                        {admissions.map(a => <li>{a}</li>)}
                    </ul>
                </div>
            </div>
            
            <div class="mt-8 pt-8 border-t border-gray-100">
                <h3 class="font-serif font-bold text-xl uppercase mb-6 text-center text-primary">Contact Information</h3>
                <div class="space-y-6">
                   <div class="flex items-start gap-4">
                     <span class="text-accent text-xl mt-1">üìû</span> 
                     <div>
                       <span class="block text-xs font-bold text-gray-400 uppercase tracking-wider">Phone</span>
                       <a href="tel:+15020000000" class="text-lg font-medium text-primary hover:text-accent transition">(502) 000-0000</a>
                     </div>
                   </div>
                   
                   <div class="flex items-start gap-4">
                     <span class="text-accent text-xl mt-1">üìç</span> 
                     <div>
                       <span class="block text-xs font-bold text-gray-400 uppercase tracking-wider">Office</span>
                       <span class="text-gray-700 leading-relaxed">123 Legal Avenue<br/>Louisville, KY 40202</span>
                     </div>
                   </div>

                   <div class="flex items-start gap-4">
                     <span class="text-accent text-xl mt-1">‚úâÔ∏è</span> 
                     <div>
                        <span class="block text-xs font-bold text-gray-400 uppercase tracking-wider">Email</span>
                        <a href="mailto:defense@attorneyesq.com" class="text-gray-700 hover:text-accent transition">defense@attorneyesq.com</a>
                     </div>
                   </div>
                </div>
                <div class="mt-8">
                  <Button href="/contact" variant="primary" class="w-full">Get a Free Consultation</Button>
                </div>
            </div>
        </div>
      </aside>

      <!-- Main Bio Content -->
      <article class="lg:col-span-8 prose prose-lg prose-slate max-w-none prose-headings:font-serif prose-headings:text-primary prose-a:text-accent">
        <Content />
      </article>
    </div>
  </section>

  <Footer slot="footer" />
</MainLayout>

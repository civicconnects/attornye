---
import Button from '../common/Button.astro';

const navItems = [
  { label: 'About', href: '/about' },
  { label: 'Practice Areas', href: '/practice' },
  { label: 'Definitions', href: '/definitions' },
];
---

<header class="bg-white border-b border-gray-100 sticky top-0 z-50">
  <div class="container mx-auto px-4 h-20 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex flex-col">
      <span class="font-serif text-2xl font-bold text-primary tracking-tight">ATTORNEY E</span>
      <span class="text-xs text-secondary uppercase tracking-widest font-medium">Criminal Defense</span>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-8">
      {navItems.map(item => (
        <a href={item.href} class="text-sm font-medium text-primary hover:text-accent transition-colors">
          {item.label}
        </a>
      ))}
    </nav>

    <!-- CTA -->
    <div class="flex items-center gap-4">
      <a href="tel:+15020000000" class="hidden lg:block text-sm font-bold text-primary hover:text-accent">
        (502) 000-0000
      </a>
      <Button href="/contact" variant="primary">
        Free Consultation
      </Button>
    </div>
  </div>
</header>

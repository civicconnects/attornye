---
import Button from '../common/Button.astro';

import { getCollection } from 'astro:content';

const practices = await getCollection('practices');
const sortedPractices = practices.sort((a, b) => a.data.order - b.data.order);

---

<header class="bg-white border-b border-gray-100 sticky top-0 z-50">
  <div class="container mx-auto px-4 h-20 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
      <img src="/images/logo.png" alt="EH Logo" class="w-12 h-12 rounded object-contain bg-navy-900 border border-navy-800" />
      <div class="flex flex-col">
        <span class="font-serif text-xl font-bold text-primary tracking-tight group-hover:text-accent transition-colors">EBERT HAEGELE</span>
        <span class="text-[0.65rem] text-secondary uppercase tracking-[0.2em] font-medium">Attorney at Law</span>
      </div>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-8">
      <a href="/about" class="text-sm font-medium text-primary hover:text-accent transition-colors">About</a>
      
      <!-- Dropdown -->
      <div class="relative group">
        <button class="flex items-center gap-1 text-sm font-medium text-primary hover:text-accent transition-colors py-4">
          Practice Areas
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
        </button>
        
        <!-- Dropdown Menu -->
        <div class="absolute top-full left-0 w-64 bg-white border border-gray-100 shadow-xl rounded-b-sm opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-2 group-hover:translate-y-0 p-2 z-50">
           {sortedPractices.map(p => (
             <a href={`/practice/${p.slug}`} class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-accent rounded-sm transition-colors border-b border-gray-50 last:border-0">
               {p.data.title}
             </a>
           ))}
           <a href="/practice" class="block px-4 py-3 text-xs font-bold text-accent uppercase tracking-wider text-center bg-gray-50 mt-2 hover:bg-gray-100">
             View All &rarr;
           </a>
        </div>
      </div>

      <a href="/definitions" class="text-sm font-medium text-primary hover:text-accent transition-colors">Definitions</a>
    </nav>

    <!-- CTA -->
    <div class="flex items-center gap-4">
      <a href="tel:+15020000000" class="hidden lg:block text-sm font-bold text-primary hover:text-accent">
        (502) 000-0000
      </a>
      <Button href="/contact" variant="primary">
        Free Consultation
      </Button>
    </div>
  </div>
</header>

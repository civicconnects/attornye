---
interface Props {
  title: string;
  definition: string;
  expanded?: string;
}

const { title, definition, expanded } = Astro.props;
---

<section class="bg-white p-6 rounded shadow-sm border-l-4 border-accent my-6 hover:shadow-md transition-shadow duration-300">
  <h2 class="font-serif text-xl font-bold text-primary mb-3">{title}</h2>
  <p class="text-gray-700 leading-relaxed">{definition}</p>

  {expanded && (
    <div class="mt-4 pt-4 border-t border-gray-100">
      <p class="text-sm text-gray-600 bg-gray-50 p-4 rounded-r italic">
        {expanded}
      </p>
    </div>
  )}
</section>
